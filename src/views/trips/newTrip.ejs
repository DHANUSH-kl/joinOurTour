      <div class="wrap">
        <div class="inputBox">

          <span>Starting Location</span>

          <input type="text" name="fromLocation" id="fromLocation" class="form__group_oneform__field w-100" required />
        </div>

        <div class="inputBox">
          <span for="location" class="form-label mb-2">End Location</span>
          <input type="text" name="location" id="location" class="form-control" required />
        </div>
      </div>

      <div class="wrap">
        <div class="inputBox">
          <span for="departure" class="form-label mb-2">Trip Starting Date</span>
          <input type="date" name="departure" id="departure" class="form-control tripDate"
