<!DOCTYPE html>
<html lang="en">
<head>

    <link rel="stylesheet" href="/css/allUser.css">

    <title>All Users</title>
</head>
<body>
    <h2>All Users</h2>
    <table border="1">
        <thead>
            <tr>
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>State</th>
                <th>City</th>
                <th>Phone</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td class="email" data-email="<%= user.email %>">
                        <%= user.email.substring(0, user.email.indexOf("@") - 2) + '****@' + user.email.split('@')[1] %>
                    </td>
                    
                    <td><%= user.firstName %></td>
                    <td><%= user.lastName %></td>
                    <td><%= user.state %></td>
                    <td><%= user.city %></td>
                    <td><%= user.phoneNumber %></td>
                    <td><%= user.email %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
