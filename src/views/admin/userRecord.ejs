<!DOCTYPE html>
<html lang="en">
<head>
    <title>User Signups</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f4f4f4;
        }

        td.email {
            position: relative;
            max-width: 150px;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }

        td.email::after {
            content: "******";
            position: absolute;
            right: 10px;
            background-color: white;
            padding-left: 5px;
        }

        td.email:hover::after {
            content: attr(data-email);
            background-color: transparent;
            padding-left: 0;
        }
    </style>
</head>
<body>

    <h2>User Signups</h2>

    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>State</th>
                <th>City</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Signup Date</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.firstName %></td>
                    <td><%= user.lastName %></td>
                    <td><%= user.state %></td>
                    <td><%= user.city %></td>
                    <td><%= user.phoneNumber %></td>
                    <td class="email" data-email="<%= user.email %>">
                        <%= user.email.substring(0, user.email.indexOf("@") - 2) + '****@' + user.email.split('@')[1] %>
                    </td>
                    <td><%= new Date(user.createdAt).toLocaleString() %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

</body>
</html>
