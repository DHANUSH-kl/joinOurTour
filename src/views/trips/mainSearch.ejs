    <script>


        document.addEventListener("DOMContentLoaded", function () {
            console.log("Script Loaded");

            let tripsData = <% - JSON.stringify(exactMatchTrips) %>;
            const userWishlist = <% - JSON.stringify(userWishlist) %>;

            console.log("Initial Trips Data:", tripsData.map(trip => ({
                id: trip._id,
                rating: trip.averageRating
            })));

            const sortOptions = document.getElementById('sort-options');
            if (!sortOptions) {
                console.error("Sort options dropdown not found!");
                return;
            }

            sortOptions.addEventListener('change', function () {
                const selectedSort = this.value;
                let sortedTrips = [...tripsData]; // Clone tripsData to avoid mutation

                console.log("Before Sorting:", sortedTrips.map(trip => ({
                    id: trip._id,
                    rating: trip.averageRating
                })));

                if (selectedSort === "price-low-high") {
                    sortedTrips.sort((a, b) => a.totalCost - b.totalCost);
                } else if (selectedSort === "price-high-low") {
                    sortedTrips.sort((a, b) => b.totalCost - a.totalCost);
                } else if (selectedSort === "rating-high-low") {
                    sortedTrips.sort((a, b) => (b.averageRating ?? 0) - (a.averageRating ?? 0)); // Handle undefined ratings
                } else if (selectedSort === "rating-low-high") {
                    sortedTrips.sort((a, b) => (a.averageRating ?? 0) - (b.averageRating ?? 0));
                }

                console.log("After Sorting:", sortedTrips.map(trip => ({
                    id: trip._id,
                    rating: trip.averageRating
                })));

                const container = document.querySelector('.cards-container');
                if (!container) {
                    console.error("Cards container not found!");
                    return;
                }
                container.innerHTML = '';

                sortedTrips.forEach((trip, i) => {
                    const tripCard = document.createElement("div");
                    tripCard.classList.add("card-container");

                    tripCard.innerHTML = `
                <div class="card-img">
                    ${trip.tripImages?.length
                            ? `<div class="trip-image">
                            <img src="${trip.tripImages[0].path}" alt="Trip Image">
                        </div>`
                            : `<p>No images available</p>`
                        }
                    <div class="heart-container">
                        ${userWishlist.includes(trip._id.toString())
                            ? `<i class="fa-solid fa-heart wishlist-active wishlist-icon" data-id="${trip._id}" style="cursor: pointer;"></i>`
                            : `<i class="fa-regular fa-heart wishlist-icon redirect-i" data-id="${trip._id}"></i>`}
                    </div>
                </div>
                <div class="card-body">
                    <div class="route">
                        <img src="../images/route.svg" alt="">
                        <h3 class="card-title">
                            <a href="/tour/${trip._id}">${trip.location}</a>
                            <p>
                                ${trip.departure ? new Date(trip.departure).toLocaleDateString('en-US', { month: 'long', day: '2-digit' }) + ' ~ ' : ''}
                                ${trip.endDate ? new Date(trip.endDate).toLocaleDateString('en-US', { month: 'long', day: '2-digit' }) : ''}
                            </p>
                        </h3>
                    </div>
                    <div class="title-container">
                        <h4 class="trip-title">${trip.title}</h4>
                    </div>
                    <div class="ratio-container">
                        <p class="maleRatio">Male: ${trip.maleRatio || 0}%</p>
