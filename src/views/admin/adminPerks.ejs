<body>

    <nav>
        <h1>Admin pannel</h1>

        <div class="links">
            <a href="/admin/adminpannel">User mangement</a>
            <a href="">Revenue tracking</a>
            <a href="/admin/tripManagement">Trip management</a>
            <a href="/admin/fetchReports">Reported trips</a>
            <a href="/admin/sendCoins">Send coins</a>
            <a href="/admin/managefeatured">Manage featured</a>
            <a href="/admin/dashboard">Dashboard</a>

        </div>
    </nav>


    <div class="userTable">

        <!-- <h1>give operater access</h1>
        <button><a href="/admin/grantagentaccess">operater access</a></button>

        <h1>send tokens</h1>
        <button><a href="/admin/sendCoins">tokens</a></button> -->



        


        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <label for="fromDate">From:</label>
                <input type="date" id="fromDate">
                <label for="toDate">To:</label>
                <input type="date" id="toDate">
                <button id="filterBtn" class="btn btn-primary">Filter</button>
            </div>
        </div>
        

            <div class="container mt-4">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Created Trips</th>
                            <th>Completed Trips</th>
                            <th>Ongoing Trips</th>
                            <th>Revenue</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (agents && agents.length > 0) { %>
                            <% agents.forEach((agent, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td> <!-- Display row numbers -->
                                    <td><%= agent.username || "N/A" %></td>
                                    <td class="tdmail"><%= agent.email || "N/A" %></td>
                                    
                                    <!-- Clickable trip count -->
                                    <td>
                                        <a href="/admin/trips/created/<%= agent.id %>" class="trip-link">
                                            <%= agent.createdTrips || 0 %>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/admin/trips/completed/<%= agent.id %>" class="trip-link">
                                            <%= agent.completedTrips || 0 %>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/admin/trips/ongoing/<%= agent.id %>" class="trip-link">
                                            <%= agent.ongoingTrips || 0 %>
                                        </a>
                                    </td>
                                    <td>â‚¹<%= agent.revenue || 0 %></td>
            
                                    <!-- Action Buttons -->
                                    <td class="btns-container">
                                        <button class="btn btn-yellow revoke" data-id="<%= agent.id %>">Revoke</button>
                                        <button class="btn btn-red suspend-btn" data-id="<%= agent.id %>">Suspend</button>
                                        <input type="number" class="suspend-input" placeholder="Days" min="1" data-id="<%= agent.id %>">
                                        <a href="mailto:<%= agent.email %>" class="btn btn-blue">Email</a>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="8" class="text-center">No agents found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        


        <a href="/admin/revoked-users" class="btn btn-danger">Show Revoked Accounts</a>

    </div>

    





    <script src="/js/userManagement.js"></script>

</body>

</html>