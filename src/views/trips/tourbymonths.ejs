    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/tourbymonths.css">
    <title>Document</title>
</head>
<body>
    <h2>Group Tours By Months</h2>

    <div class="months-container">
        <% let today = new Date(); %>
        <% let currentMonth = today.getMonth(); %>
        <% let months = [
            { name: "January", image: "../images/winter.jpg" },
            { name: "February", image: "/images/winter.jpg" },
            { name: "March", image: "../images/spring.jpg" },
            { name: "April", image: "/images/spring.jpg" },
            { name: "May", image: "/images/spring.jpg" },
            { name: "June", image: "/images/summer.jpg" },
            { name: "July", image: "/images/summer.jpg" },
            { name: "August", image: "/images/summer.jpg" },
            { name: "September", image: "/images/autumn.jpg" },
            { name: "October", image: "/images/autumn.jpg" },
            { name: "November", image: "/images/autumn.jpg" },
            { name: "December", image: "/images/winter.jpg" }
        ]; %>

        <% for (let i = currentMonth; i < 12; i++) { %>
            <div class="season season<%= i + 1 %>" >
                <a href="/showtourbymonths/<%= i + 1 %>">
                    <img src="<%= months[i].image %>" alt="<%= months[i].name %>">
                    <div class="rotate">
                        <p><%= months[i].name %></p>
                    </div>
                </a>
            </div>
        <% } %>
    </div>





    <footer>

        <div class="sec1">
            <div class="logo"></div>
            <p>Book your trip in minute, get full Control for much longer.</p>
        </div>
        <div class="sec2">
            <div class="col1">
                <h3>Company</h3>
                <div class="links">
                    <a href="">How it works</a>
                    <a href="/">Find a trip</a>
                    <a href="/createtrip">Create a trip</a>
                </div>


            </div>
            <div class="col2">
                <h3>EXPLORE</h3>
                <div class="links">
                    <a href="/tourbydestination">Group trips by destination </a>
                    <a href="tourbymonths">Group trips by Month </a>
                    <a href="">Affilates</a>
                </div>
            </div>
            <div class="col3">
                <h3>Join Our Tour</h3>
                <div class="links">
                    <a href="">Blog </a>
                    <a href="">About us</a>
                    <a href="/contactUs">Contact us</a>
                </div>
            </div>


        </div>
        <div class="sec3">

            <img src="/images/f.svg" alt="no image">
            <img src="/images/i.svg" alt="">
            <img src="/images/t.svg" alt="">


        </div>

        <p class="cc">All rights reserved@travelgoo.co</p>


    </footer>

</body>
</html>