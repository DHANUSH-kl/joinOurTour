    <main>


        <div class="row">
            <form action="/user/signup" method="POST" id="signupForm">
                <!-- Name Section -->
                <div class="names">
                    <div class="mt-3">
                        <input 
                            type="text" 
                            name="firstName" 
                            id="firstName" 
                            class="form-control" 
                            placeholder="First Name" 
                            required 
                            style="border: 1px solid #ced4da; transition: border-color 0.3s;"
                        >
                    </div>
                    <div class="mt-3">
                        <input 
                            type="text" 
                            name="lastName" 
                            id="lastName" 
                            class="form-control" 
                            placeholder="Last Name" 
                            required 
                            style="border: 1px solid #ced4da; transition: border-color 0.3s;"
                        >
                    </div>
                </div>
        
                <!-- Location Section -->
                <div class="location">
                    <div class="mt-3">
                        <input 
                            type="text" 
                            name="state" 
                            id="state" 
                            class="form-control" 
                            placeholder="State" 
                            required 
                            style="border: 1px solid #ced4da; transition: border-color 0.3s;"
                        >
                    </div>
                    <div class="mt-3">
                        <input 
                            type="text" 
                            name="city" 
                            id="city" 
                            class="form-control" 
                            placeholder="City" 
                            required 
                            style="border: 1px solid #ced4da; transition: border-color 0.3s;"
                        >
                    </div>
                </div>
        
                <!-- Username Section -->
                <div class="mt-3">
                    <input 
                        type="text" 
                        name="username" 
                        id="username" 
                        class="form-control" 
                        placeholder="Username" 
                        required 
                        style="border: 1px solid #ced4da; transition: border-color 0.3s;"
                    >
                </div>
        
                <!-- Email Section -->
                <div class="mt-3">
                    <input 
                        type="email" 
                        name="email" 
                        id="email" 
                        class="form-control" 
                        placeholder="Enter a valid email" 
                        required 
                        style="border: 1px solid #ced4da; transition: border-color 0.3s;"
                    >
                </div>
        
                <!-- Phone Number Section -->
                <div class="mt-3">
                    <input 
                        type="text" 
                        name="phoneNumber" 
                        id="phoneNumber" 
                        class="form-control" 
                        placeholder="Phone Number" 
                        maxlength="10" 
                        required 
                        style="border: 1px solid #ced4da; transition: border-color 0.3s;"
                    >
                </div>
        
                <!-- Password Section -->
                <div class="mt-3">
                    <input 
                        type="password" 
                        name="password" 
                        id="password" 
                        class="form-control" 
                        placeholder="Password" 
                        required 
                        minlength="8" 
                        style="border: 1px solid #ced4da; transition: border-color 0.3s;"
                    >
                </div>
        
                <!-- Buttons -->
                <div class="btns">
                    <button type="submit" class="btn btn-success mt-3">Get OTP</button>
                </div>
            </form>
        </div>
        


    </main>
    
    
    <script>
     


     document.addEventListener('DOMContentLoaded', function () {
    const emailInput = document.getElementById('email');
    const phoneNumberInput = document.getElementById('phoneNumber');
    const passwordInput = document.getElementById('password');

    // Phone Number Validation
    phoneNumberInput.addEventListener('input', function () {
        phoneNumberInput.value = phoneNumberInput.value.replace(/\D/g, ''); // Allow only digits
        if (phoneNumberInput.value.length === 10) {
            phoneNumberInput.style.borderColor = 'green';
            phoneNumberInput.placeholder = "Phone number is valid";
        } else {
            phoneNumberInput.style.borderColor = 'red';
            phoneNumberInput.placeholder = "Enter a valid 10-digit phone number";
        }
    });

    // Email Validation
    emailInput.addEventListener('input', function () {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/; // Simple email regex
        if (emailRegex.test(emailInput.value)) {
            emailInput.style.borderColor = 'green';
            emailInput.placeholder = "Email is valid";
        } else {
            emailInput.style.borderColor = 'red';
            emailInput.placeholder = "Enter a valid email address";
        }
    });

